{
  "description": "Test configuration for UniformNumericNoiseOperation",
  "version": "1.0.0",
  "operation": "UniformNumericNoiseOperation",
  "test_scenarios": {
    "basic_additive": {
      "field_name": "test_values",
      "noise_range": 5.0,
      "noise_type": "additive",
      "description": "Basic additive noise test"
    },
    "basic_multiplicative": {
      "field_name": "test_values", 
      "noise_range": 0.1,
      "noise_type": "multiplicative",
      "description": "Basic multiplicative noise test"
    },
    "asymmetric_range": {
      "field_name": "test_values",
      "noise_range": [-2.0, 5.0],
      "noise_type": "additive",
      "description": "Asymmetric noise range test"
    },
    "bounded_output": {
      "field_name": "test_values",
      "noise_range": 10.0,
      "noise_type": "additive",
      "output_min": 0.0,
      "output_max": 100.0,
      "description": "Output bounds enforcement test"
    },
    "preserve_zeros": {
      "field_name": "test_values",
      "noise_range": 5.0,
      "noise_type": "additive",
      "preserve_zero": true,
      "description": "Zero preservation test"
    },
    "integer_rounding": {
      "field_name": "test_integers",
      "noise_range": 3.0,
      "noise_type": "additive",
      "round_to_integer": true,
      "description": "Integer rounding test"
    },
    "statistical_scaling": {
      "field_name": "test_values",
      "noise_range": 1.0,
      "noise_type": "additive",
      "scale_by_std": true,
      "scale_factor": 0.1,
      "description": "Statistical scaling test"
    },
    "secure_random": {
      "field_name": "test_values",
      "noise_range": 5.0,
      "noise_type": "additive",
      "use_secure_random": true,
      "description": "Secure random generation test"
    },
    "reproducible": {
      "field_name": "test_values",
      "noise_range": 5.0,
      "noise_type": "additive",
      "use_secure_random": false,
      "random_seed": 42,
      "description": "Reproducible noise test"
    }
  },
  "test_data": {
    "basic_numeric": {
      "values": [10.5, 20.0, 30.5, 40.0, 50.5, 60.0, 70.5, 80.0],
      "description": "Basic floating point values"
    },
    "integer_values": {
      "values": [10, 20, 30, 40, 50, 60, 70, 80],
      "description": "Integer values for rounding tests"
    },
    "edge_cases": {
      "values": [0.0, -10.5, 100.0, 0.001, -0.001, 999.99, 0.0, -999.99],
      "description": "Edge cases including zeros and extremes"
    },
    "with_nulls": {
      "values": [10.5, 20.0, null, 40.0, null, 60.0, 70.5, 80.0],
      "description": "Data with null values"
    }
  },
  "expected_behaviors": {
    "additive_noise": "Values should change by amount within noise_range",
    "multiplicative_noise": "Values should change by percentage within noise_range",
    "preserve_zero": "Zero values should remain zero when preserve_zero=true",
    "output_bounds": "All output values should be within [output_min, output_max]",
    "integer_rounding": "Output should be integers when round_to_integer=true",
    "statistical_scaling": "Noise amplitude should scale with data standard deviation",
    "null_preservation": "Null values should remain null with PRESERVE strategy",
    "reproducibility": "Same seed should produce identical results"
  },
  "validation_criteria": {
    "noise_application": "Output values differ from input values",
    "noise_bounds": "Applied noise is within specified range",
    "statistical_properties": "Noise follows uniform distribution",
    "data_integrity": "Non-target fields remain unchanged",
    "error_handling": "Invalid parameters raise appropriate exceptions"
  }
}
